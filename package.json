{
  "name": "@szg/morpher-client",
  "version": "2.1.1",
  "description": "A React and React Native client for the Morpher inflection and morphological analysis framework",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint  --stream",
    "lint:fix": "lerna run lint:fix  --stream",
    "test": "lerna run test --stream",
    "test:shared": "lerna exec --scope @szg/morpher-client-shared -- yarn test",
    "test:shared:watch": "lerna exec --scope @szg/morpher-client-shared -- yarn test:watch",
    "test:mobile": "lerna exec --scope @szg/morpher-client-mobile -- yarn test",
    "test:mobile:watch": "lerna exec --scope @szg/morpher-client-mobile -- yarn test:watch",
    "test:web": "lerna exec --scope @szg/morpher-client-web -- yarn test",
    "test:web:watch": "lerna exec --scope @szg/morpher-client-web -- yarn test:watch",
    "build": "lerna run build --stream",
    "build:shared": "lerna exec --scope @szg/morpher-client-shared -- yarn build",
    "build:mobile": "lerna exec --scope @szg/morpher-client-mobile -- yarn build",
    "build:mobile:android": "lerna exec --scope @szg/morpher-client-mobile -- yarn build:android",
    "build:mobile:ios": "lerna exec --scope @szg/morpher-client-mobile -- yarn build:ios",
    "build:web": "lerna exec --scope @szg/morpher-client-web -- yarn build",
    "start:mobile:android": "lerna exec --scope @szg/morpher-client-mobile -- yarn start:android",
    "start:mobile:android:production": "lerna exec --scope @szg/morpher-client-mobile -- yarn start:android:production",
    "start:mobile:ios": "lerna exec --scope @szg/morpher-client-mobile -- yarn start:ios",
    "start:mobile:ios:production": "lerna exec --scope @szg/morpher-client-mobile -- yarn start:ios:production",
    "start:web": "lerna exec --scope @szg/morpher-client-web -- yarn start"
  },
  "devDependencies": {
    "eslint": "8.12.0",
    "jest": "27.5.1",
    "lerna": "4.0.0"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.14.2",
    "yarn": ">=1.22.18"
  },
  "keywords": [
    "morpher",
    "inflection",
    "morphological analysis",
    "morpher"
  ],
  "bugs": {
    "url": "https://github.com/szgabsz91/morpher-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/szgabsz91/morpher-client"
  },
  "author": {
    "name": "Gabor Szabo",
    "email": "szgabsz91@gmail.com",
    "url": "https://github.com/szgabsz91"
  },
  "license": "MIT"
}
